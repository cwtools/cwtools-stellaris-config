
types = {
	type[agreement_term] = {
		path = "game/common/agreement_terms"
		subtype[hidden] = {
			hidden = yes
		}
		localisation = {
			subtype[!hidden] = {
				## required
				Name = "$"
				## required
				Description = "$_desc"
				## optional
				Tooltip = "$_tooltip"
			}
		}
	}
	type[agreement_term_value] = {
		path = "game/common/agreement_term_values"
		subtype[agreement_term_value_resouces] = {
			resources = {
				## cardinality 0..inf
				<resource>
			}
		}
		localisation = {
			## optional
			Name = "$"
			subtype[!agreement_term_value_resources] = {
				## required
				Description = "$_desc"
				## required
				Tooltip = "$_tooltip"
			}
		}
	}
	type[agreement_preset] = {
		path = "game/common/agreement_presets"
		localisation = {
			## required
			Name = "$"
			## required
			Description = "$_desc"
			## required
			Flavor = "$_flavor_desc"
		}
	}
	type[agreement_resource] = {
		path = "game/common/agreement_resources"
		localisation = {
			## required
			Name = "$"
		}
	}
}

enums = {
	enum[agreement_term_type] = {
