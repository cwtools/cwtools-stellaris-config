		## cardinality = 0..1
		animationmaskfile = filepath
		## cardinality = 0..1
		animationtexturefile = filepath
		## cardinality = 0..1
		animationrotation = float[-360..360]
		## cardinality = 0..1
		animationlooping = bool
		## cardinality = 0..1
		animationtime = float
		## cardinality = 0..1
		animationdelay = float
		## cardinality = 0..1
		animationblendmode = enum[animation_mode]
		## cardinality = 0..1
