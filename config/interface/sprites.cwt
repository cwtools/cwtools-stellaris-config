	effectFile = filepath
	## cardinality = 0..1
	alwaysTransparent = bool
	## cardinality = 0..1
	transParencecheck = bool
	## cardinality = 0..1
	borderSize = { x = int y = int }
	## cardinality = 0..1
	hitbox_margin = { x = int y = int }
	## cardinality = 0..1
	noOfFrames = int
	## cardinality = 0..1
	type = enum[sprite_type]
	## cardinality = 0..1
	character = bool
	## cardinality = 0..1
	tilingCenter = bool
	## cardinality = 0..1
	loadType = "FRONTEND"
	## cardinality = 0..1
	legacy_lazy_load = bool
	## cardinality = 0..1
